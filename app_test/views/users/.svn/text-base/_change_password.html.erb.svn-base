<div id="change_password">
	<div id="change_password_status"></div>
	<% form_remote_tag(:url => { :controller => "/users", :action => "change_password"}) do -%>
		<table>
			<tbody>
				<tr>
					<th>New Password</th>
					<td><%= password_field_tag(:password) %></td>
				</tr>
				<tr>
					<th>Confirm Password</th>
					<td><%= password_field_tag(:password_confirmation) %></td>
				</tr>
				<tr>
					<th></th>
					<td><%= submit_tag 'Change Password' %></td>
				</tr>
			</tbody>
		</table>
	<% end -%>
</div>