<% @page_title = 'Forgot Your Password?' -%>
<%= "<p class=\"notice\">#{flash[:notice]}</p>" if flash[:notice] %>
<% form_remote_tag(:url=> {:controller => "users", :action=> "reset_password"}) do -%>
	<p>Having Trouble Signing In?</p>
	<span class="instructions" style="font-size: 1em; font-style: normal;">Enter your email address below and we'll send you an email with your new password.</span>
	<p>Email address
		<div></div>
		<%= text_field_tag('email', params[:email]) %>
	</p>
	<br>
	<br>
	<%= submit_tag("Reset Password") %> or 
	<%= link_to_remote("Go back to login page", :url=> {:controller => "users", :action=> "cancel_reset_password"}, :html => {:class => "action-link"}) %>
<% end -%>